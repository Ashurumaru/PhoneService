<Page x:Class="PhoneService.Views.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PhoneService.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Общий отчет по заказам" Width="200" Click="OrderReportButton_Click" Margin="5"/>
            <Button Content="Отчет по доходам" Width="200" Click="RevenueReportButton_Click" Margin="5"/>
            <Button Content="Отчет по сотрудникам" Width="200" Click="EmployeeReportButton_Click" Margin="5"/>
        </StackPanel>

        <Frame x:Name="ReportFrame" Grid.Row="1"/>
    </Grid>
</Page>
